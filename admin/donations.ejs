<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations Management</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <h1>Donations Management</h1>
    <div class="content">
        <h2>Donation History</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Donor Name</th>
                    <th>Amount</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through donations and display them -->
                <% donations.forEach(donation => { %>
                    <tr>
                        <td><%= donation.id %></td>
                        <td><%= donation.donorName %></td>
                        <td><%= donation.amount %></td>
                        <td><%= donation.date %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>