<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <title>Fur-Ever Friends</title>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ffe0a6;
            padding: 10px 20px;
            position: relative;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: 40px;
            margin-right: 10px;
        }

        .logo h1 {
            font-size: 24px;
            color: #0075c4;
        }

        .menu {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .menu a {
            text-decoration: none;
            color: #a54d09;
            font-weight: bold;
            padding: 5px 10px;
        }

        .menu a:hover {
            text-decoration: underline;
        }

        /* Dropdown */
        .dropdown {
            position: relative;
        }

        .dropdown-toggle {
            cursor: pointer;
            font-weight: bold;
            color: #a54d09;
            display: flex;
            align-items: center;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            top: 35px;
            right: 0;
            background-color: #f8f8f8;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            min-width: 150px;
            z-index: 10;
        }

        .dropdown-content a {
            padding: 8px 16px;
            display: block;
            color: #a54d09;
            text-decoration: none;
        }

        .dropdown-content a:hover {
            background-color: #ffe0a6;
        }

        .dropdown.active .dropdown-content {
            display: block;
        }

        /* Hamburger for Mobile */
        .hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
            gap: 5px;
        }

        .hamburger span {
            width: 25px;
            height: 3px;
            background-color: #333;
            border-radius: 3px;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .menu {
                display: none;
                flex-direction: column;
                background-color: #f8f8f8;
                position: absolute;
                top: 70px;
                right: 0;
                width: 100%;
                padding: 1rem 0;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .menu.active {
                display: flex;
            }

            .dropdown-content {
                position: static;
                box-shadow: none;
                background-color: transparent;
            }

            .dropdown-content a {
                padding: 10px 20px;
            }

            .hamburger {
                display: flex;
            }

            .dropdown:hover .dropdown-content {
                display: none; /* Disable hover effect on mobile */
            }

            .dropdown.active .dropdown-content {
                display: block; /* Enable dropdown on click */
            }
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <img src="images/Pawfect Pawtrails-3.png" alt="Logo">
            <h1>Fur-Ever Friends</h1>
        </div>

        <div class="menu">
            <a href="home">Home</a>
            <a href="browse_pet">Browse Pets</a>
            <a href="adopt">Adopt</a>
            <a href="success_stories">Success Stories</a>
            <a href="pet_care">Pet Care</a>
            <a href="get_involved">Get Involved</a>
            <a href="donate">Donate</a>

            <!-- Sign In Dropdown -->
            <div class="dropdown">
                <span class="dropdown-toggle" onclick="toggleDropdown(event)">Sign In </span>
                <div class="dropdown-content">
                    <a href="signin">User Login</a>
                    <a href="admin/signup">Admin Login</a>
                </div>
            </div>
        </div>

        <div class="hamburger" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>

    <script>
        function toggleMenu() {
            document.querySelector('.menu').classList.toggle('active');
        }

        function toggleDropdown(event) {
            event.preventDefault(); // Prevent page jump
            const dropdown = event.currentTarget.parentElement;
            dropdown.classList.toggle('active');
        }
    </script>

</body>
</html>
