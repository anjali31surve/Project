<script>fetch("/browse-pets")
    .then(response => response.json())
    .then(pets => {
        let petContainer = document.getElementById("pet-list");
        petContainer.innerHTML = "";

        pets.forEach(pet => {
            let petCard = `
                <div class="pet-card">
                    <img src="${pet.image || 'default.jpg'}" alt="${pet.name}">
                    <h3>${pet.name}</h3>
                    <p>Breed: ${pet.breed}</p>
                    <p>Age: ${pet.age} years</p>
                    <p>${pet.description}</p>
                </div>
            `;
            petContainer.innerHTML += petCard;
        });
    })
    .catch(error => console.error("Error loading pets:", error));
</script>

